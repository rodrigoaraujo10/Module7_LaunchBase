<div class="item">
    <div>Nome Completo</div>
        <div class="input">
            <input 
                type="text" 
                name="name" 
                placeholder="Digite seu nome completo"  
                value="{{ user.name }}"
                required
            >
    </div>            
</div>

<div class="item">
    <div>E-mail</div>
        <div class="input">
            <input 
                type="email" 
                name="email" 
                placeholder="Digite seu email"  
                value="{{ user.email }}"
                onblur="Validate.apply(this, 'isEmail')"

            >
    </div>            
</div>


<div class="item">
    <div>Senha</div>
        <div class="input">
            <input 
                type="password" 
                name="password" 
                placeholder="Crie uma senha"  

            >
    </div>            
</div>

{% if not user.id %}
<div class="item">
    <div>Repetir Senha</div>
        <div class="input">
            <input 
                type="password" 
                name="passwordRepeat" 
                placeholder="Digite a senha novamente"  
            >
    </div>            
</div>
{% endif %}


<div class="item">
    <div>CPF/CNPJ</div>
        <div class="input">
            <input 
                type="text" 
                name="cpf_cnpj" 
                placeholder="Digite seu CPF/CNPJ"  
                value="{{ user.cpf_cnpj }}"
                onkeydown="Mask.apply(this, 'cpfCnpj')"
                onblur="Validate.apply(this, 'isCpfCnpj')"

            >
    </div>            
</div>

<div class="item">
    <div>CEP</div>
        <div class="input">
            <input 
                type="text" 
                name="cep" 
                placeholder="Digite o seu CEP"  
                value="{{ user.cepj }}"
                onkeydown="Mask.apply(this, 'cep')"
                onblur="Validate.apply(this, 'isCep')"

            >
    </div>            
</div>

<div class="item">
    <div>Endereço Completo</div>
        <div class="input">
            <input 
                type="text" 
                name="address" 
                placeholder="Digite o seu endereço completo"  
                value="{{ user.address }}"
            >
    </div>            
</div>